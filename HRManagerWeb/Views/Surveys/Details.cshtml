@model IEnumerable<HRManager.domain.Entities.Response>
@using HRManagerWeb.Utils;

@foreach (var item in Model)
{

    <div class="card shadow mb-4 ">
        <a href="#collapseCard" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-controls="collapseCard">

            @{
                string userId = item.UserId.ToString();
                string username = UserUtilities.GetUsermameForUser(long.Parse(userId));
            }
            <h6 class="m-0 font-weight-bold text-primary"> Submitted by @username | @Html.DisplayFor(model => item.Survey.Title) |   @Html.DisplayNameFor(model => model.Survey.Date) :  @Html.DisplayFor(model => item.Survey.Date)</h6>
        </a>
        <div class="card-body collapse" id="collapseCard">

            <div class=" font-weight-bold text-info text-primary text-uppercase mb-1">
                Answers
            </div>
            @for (int i = 0; i < item.Survey.Criteria.Count; i++)
            {<div class="form-group">

                    @Html.LabelFor(model => item.Survey.Criteria[i].Description, new { @class = "control-label" }) @(i + 1)
                    <div class="col-md-10">
                        @Html.Hidden("Index", i)
                        @Html.TextBoxFor(model => item.Survey.Criteria[i].Description, new { @class = "form-control", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => item.Survey.Criteria[i].Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            @Html.Label("Yes")
                            @Html.RadioButtonFor(model => item.Survey.Criteria[i].Response, true, new { disabled = "disabled" })

                            @Html.Label("No")
                            @Html.RadioButtonFor(model => item.Survey.Criteria[i].Response, false, new { disabled = "disabled" })
                        </div>
                    </div>
                </div>





            }


            <div class="h5 mb-0 font-weight-bold text-gray-800">

            </div>
        </div>
    </div>
}
