@model IEnumerable<HRManagerWeb.Models.evaluation>
@using HRManagerWeb.Models;
@{
    ViewBag.Title = "Administrator";

}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Evaluaion</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>STARTDATE</th>
                        <th>FINDATE</th>
                        <th>EVALUATION TYPE</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>ROLE</th>
                        <th>DD</th>
                        <th>DF</th>
                        <th>TypeE</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.DD)</td>
                        <td>@Html.DisplayFor(modelItem => item.DF)</td>
                        <td>@Html.DisplayFor(modelItem => item.TypeE)</td>
                        <td>@Html.DisplayFor(modelItem => item.E_ID)</td>
                        <td style="width:250px;">

                            @Html.ActionLink("Delete", "DeleteEval", new { id = 6 }, new { @class = "btn btn-primary align-bottom" })

                            <!--  id="edit_(alt)item.E_ID"
    <a class="btn btn-primary align-bottom" href="#" id="edit(alt)item.E_ID" onclick="createModal('(alt)Url.Action("EvalUpdate", "Surverys", new { id = item.E_ID })')">-->
                            <a class="btn btn-primary align-bottom" href="#" id="edit_@item.E_ID" onclick="createModal('@Url.Action("EvalUpdate", "Surverys", new {item.E_ID })')">
                                <i class="fas fa-pen fa-sm fa-fw mr-2 text-gray-400"></i>
                                Update
                            </a>



                        </td>

                    </tr>
                        <div class="modal fade" id="updateEvalModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style=" max-width:800px;" role="document">
                                <div id="modalContent" class="modal-content">

                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>




        </div>
    </div>
</div>
<div class="btn-group" style="float:right">
    <a class="btn btn-primary float-right align-bottom" href="http://localhost:9981/User/Create">
        <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
        Add Eval
    </a>
    
</div>





<link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script>
    function createModal(url) {
        $('#modalContent').load(url);
        $('#EvalUpdatModal').modal('show');
    }
</script>


