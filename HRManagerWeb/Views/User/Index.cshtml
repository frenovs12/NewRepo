@model IEnumerable<HRManagerWeb.Models.user>
@using HRManagerWeb.Models;
@{
    ViewBag.Title = "Administrator";

}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Users</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.login)</td>
                            <td>@Html.DisplayFor(modelItem => item.email)</td>
                            <td>@Html.DisplayFor(modelItem => item.role)</td>
                            <td>@Html.DisplayFor(modelItem => item.created)</td>
                            <td style="width:250px;">

                                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-primary align-bottom" })


                                <a class="btn btn-primary align-bottom" href="#" id="edit_@item.id" onclick="createModal('@Url.Action("Details", "User" , new {id=item.id })')">
                                    <i class="fas fa-pen fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Update
                                </a>



                            </td>

                        </tr>
                        <div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style=" max-width:800px;" role="document">
                                <div id="modalContent" class="modal-content">

                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>




        </div>
    </div>
</div>
<div class="btn-group" style="float:right">
    <a class="btn btn-primary float-right align-bottom" href="http://localhost:9981/User/Create">
        <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
        Add User
    </a>
    <a class="btn btn-primary float-right align-bottom" href="http://localhost:9981/DayOff/Index">
        <i class="fas fa-eye fa-sm fa-fw mr-2 text-gray-400"></i>
        View Day Off Demands
    </a>
</div>





<link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script>
    function createModal(url) {
        $('#modalContent').load(url);
        $('#updateUserModal').modal('show');
    }
</script>

